{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<section class="hero">
    <div class="hero-container">
        <!-- Left Side: Static Image -->
        <div class="hero-image">
            <div class="static-image" style="background-image: url('{{asset "images/Webbanner.png"}}');"></div>
        </div>

        <!-- Right Side: Content -->
        <div class="hero-content">
            <h2>Where Tradition Meets Innovation in Every Product.</h2>
            <p>Eco-Friendly Solutions for a Healthier Tomorrow.</p>
            <a href="/about/" class="btn primary-btn">About Us</a>
<br><br>
            <!-- Quality Icons -->
            <div class="quality-icons">
                <div class="quality-item">
                    <img src="{{asset "images/organic.png"}}" alt="Sri Lankan Origin" class="quality-icon">
                    <span class="quality-text">100% Natural</span>
                </div>
                <div class="quality-item">
                    <img src="{{asset "images/coconut.png"}}" alt="Sri Lankan Origin" class="quality-icon">
                    <span class="quality-text">Sri Lankan Origin</span>
                </div>
                <div class="quality-item">
                    <img src="{{asset "images/recycle.png"}}" alt="Eco-Friendly Packaging" class="quality-icon">
                    <span class="quality-text">Eco-Friendly Packaging</span>
                </div>
                <div class="quality-item">
                    <img src="{{asset "images/quality.png"}}" alt="Certified Quality" class="quality-icon">
                    <span class="quality-text">Certified Quality</span>
                </div>
            </div>
        </div>
    </div>
</section>

<main id="site-main" class="site-main outer">
  <div class="inner posts">
    <section class="who-we-are">
        <div class="container">
                <div class="row">
                    <!-- Left Column: Text -->
                    <div class="col left-content">
                        <h2>Who We Are</h2>
                        <p>
                        Maxol (Private) Limited is a Sri Lankan pioneer in eco-friendly,
                        sustainable manufacturing and export of high-quality, non-traditional
                        agro and herbal products. Established in 2023, we set out to redefine
                        the export landscape by introducing innovative, value-added products
                        that reflect Sri Lankaâ€™s rich heritage and commitment to the environment.
                        </p>
                    </div>
                
                        <!-- Right Column: Image with Change Buttons -->
                    <div class="right-slider">
                        <div class="photo-slider">
                            <img src="{{asset 'images/img01.jpg'}}" class="slider-img active" alt="Slide 1">
                            <img src="{{asset 'images/img02.jpg'}}" class="slider-img" alt="Slide 2">
                            <img src="{{asset 'images/img03.jpg'}}" class="slider-img" alt="Slide 3">
                            <img src="{{asset 'images/img04.jpg'}}" class="slider-img" alt="Slide 3">
                            <img src="{{asset 'images/img05.jpg'}}" class="slider-img" alt="Slide 3">
                        </div>
                    </div>
                </div>
        </div>
    </section>

        {{! Product Section }}
        <section class="products">
        <h2>Our Products</h2>
        <div class="container">
            <div class="post-feed">
            {{#foreach posts limit="3"}}
                {{> "post-card"}}
            {{/foreach}}
            </div>
        </div>
        </section>
    {{pagination}}
  </div>
</main>
